        <a href="#index-page" class="back-to-toc">返回目录</a>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // 创建背景装饰元素
            const decoration = document.getElementById('decoration');
            for (let i = 0; i < 15; i++) {
                const item = document.createElement('div');
                item.classList.add('floating-item');
                const size = Math.random() * 80 + 20;
                item.style.width = `${size}px`;
                item.style.height = `${size}px`;
                item.style.left = `${Math.random() * 100}%`;
                item.style.animationDelay = `${Math.random() * 20}s`;
                item.style.animationDuration = `${Math.random() * 30 + 20}s`;
                decoration.appendChild(item);
            }
            
            // 获取所有页面
            const pages = document.querySelectorAll('.container, .chapter-container');
            // 获取所有目录链接
            const tocLinks = document.querySelectorAll('.toc-link');
            // 获取所有返回目录链接
            const backLinks = document.querySelectorAll('.back-to-toc');
            
            // 为每个目录链接添加点击事件
            tocLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    // 获取目标页面ID
                    const targetPageId = this.getAttribute('href').substring(1);
                    
                    // 隐藏所有页面
                    pages.forEach(page => {
                        page.style.display = 'none';
                    });
                    
                    // 显示目标页面
                    document.getElementById(targetPageId).style.display = 'flex';
                    
                    // 滚动到顶部
                    window.scrollTo(0, 0);
                });
            });
            
            // 为返回目录链接添加点击事件
            backLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    // 隐藏所有页面
                    pages.forEach(page => {
                        page.style.display = 'none';
                    });
                    
                    // 显示目录页面
                    document.getElementById('index-page').style.display = 'flex';
                    
                    // 滚动到顶部
                    window.scrollTo(0, 0);
                });
            });
        });
    </script>
